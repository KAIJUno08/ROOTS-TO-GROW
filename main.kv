ScreenManager:
    LoginScreen:
    RegistroScreen:
    InicioAdminScreen:
    InicioDespachoScreen:
    NovedadesScreen:
    ControlUsuariosScreen:
    ResultadosScreen:
    PlanificacionScreen:
    RemisionesScreen:
    DespachoScreen:

<LoginScreen>:
    name: "login"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        MDLabel:
            text: "ROOTS To GROW"
            font_style: "H5"
            halign: "center"

        MDTextField:
            id: usuario
            hint_text: "Usuario"
        MDTextField:
            id: clave
            hint_text: "Clave"
            password: True

        MDRaisedButton:
            text: "Ingresar"
            on_release: app.iniciar_sesion(usuario.text, clave.text)
        MDRaisedButton:
            text: "Registrar usuario"
            on_release: app.ir_a_registro()

<InicioDespachoScreen>:
    name: "despacho"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        MDLabel:
            text: "Menú Despachador"
            font_style: "H5"
            halign: "center"

        MDRaisedButton:
            text: "Empezar despacho"
            on_release: app.ir_a_despacho()
        MDRaisedButton:
            text: "Ver planificación"
        MDRaisedButton:
            text: "Salidas de la semana"
        MDRaisedButton:
            text: "Remisiones"
            on_release: app.ir_a_remisiones()
        MDRaisedButton:
            text: "Cerrar sesión"
            on_release: app.ir_a_login()